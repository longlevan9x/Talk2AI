{
    "name": "Talk2AI â€“ Effortless AI communication ",
    "description": "Talk2AI lets you send content directly to powerful AI platforms like ChatGPT, Claude, or Gemini with a single click.",
    "version": "1.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "assets/logos/logo.png",
        "32": "assets/logos/logo.png",
        "48": "assets/logos/logo.png",
        "128": "assets/logos/logo.png"
    },
    "permissions": [
        "webRequest",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://nextjs-practice-exam.vercel.app/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/sha3.min.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/sha3.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}