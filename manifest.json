{
    "name": "GPT Chat Bridge Auto Refresh Token",
    "version": "1.0.1",
    "manifest_version": 3,
    "permissions": [
        "webRequest",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://nextjs-practice-exam.vercel.app/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/sha3.min.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/sha3.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}